		</dependency>
		<dependency>
			<groupId>com.univocity</groupId>
			<artifactId>univocity-parsers</artifactId>
			<version>2.9.1</version>
			<type>jar</type>
		</dependency>
<dependency>
    <groupId>de.l3s.boilerpipe</groupId>
    <artifactId>boilerpipe</artifactId>
    <version>1.1.0</version>
    <exclusions>
				<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
				</exclusions>
</dependency>
	</dependencies>

	<build>
		<!-- Output classes directly into the webapp, so that IDEs and "mvn process-classes" 
			update them in DevMode -->
		<outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF/classes</outputDirectory>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>3.0.0-M2</version>
				<executions>
					<execution>
						<id>enforce-banned-dependencies</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<bannedDependencies>
									<excludes>
										<exclude>org.eclipse.jetty:jetty-annotations:(,9.4.9]</exclude>
									</excludes>
									<!--<includes>
										<include>org.eclipse.jetty:jetty*:[9.5,)</include>
									</includes>-->
								</bannedDependencies>
							</rules>
							<fail>false</fail>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-war-plugin</artifactId>

				<configuration>
					<archive>
						<compress>false</compress>
					</archive>
				</configuration>
			</plugin>

			<!-- Mojo's Maven Plugin for GWT -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>gwt-maven-plugin</artifactId>
				<version>2.9.0</version>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
							<goal>test</goal>
							<goal>generateAsync</goal>
						</goals>

						<configuration>
							<compileReport>true</compileReport>
							<compilerMetrics>true</compilerMetrics>
							<failOnError>true</failOnError>
							<printJavaCommandOnError>true</printJavaCommandOnError>
							<optimizationLevel>9</optimizationLevel>
							<localWorkers>4</localWorkers>
							<style>OBFUSCATED</style>
						</configuration>
					</execution>
				</executions>

				<!-- Plugin configuration. There are many available options, see gwt-maven-plugin 
					documentation at codehaus.org -->
				<configuration>
					<superDevMode>false</superDevMode>

					<runTarget>FLAIR.html</runTarget>
					<modules>
						<module>com.flair.FLAIR</module>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
