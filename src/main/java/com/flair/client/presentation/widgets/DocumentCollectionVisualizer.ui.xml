<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma.window="urn:import:gwt.material.design.addins.client.window"
	xmlns:ma.splitpanel="urn:import:gwt.material.design.addins.client.splitpanel"
	xmlns:flair.pak="urn:import:com.flair.client.presentation.widgets.sliderbundles">

	<ui:style>
	.panel-axes {
		border-right: 2px solid #e9e9e9;
	}
	.alignMiddle{
            display: table-cell;
            vertical-align: middle;
            text-align:center;
          }
           .outer {
           display: table;
           height: 100%;
           width: 100%;
         }
	</ui:style>

	<ma.window:MaterialWindow
		ui:field="mdlVisualizerUI" width="100vw" height="100vh" maximize="true"
		title="Visualize" padding="20">
		<m:MaterialRow margin="20" marginBottom="20">
			<m:MaterialLabel ui:field="lblTitleUI"
				text="Select ranges by dragging the pointers up and down. Change the order of axes by dragging them left and right. Add or remove axes via checkboxes on the right." />
		</m:MaterialRow>
		<m:MaterialRow>
		<g:FlowPanel addStyleNames="{style.outer}">
				<g:FlowPanel ui:field="pnlSVGContainerUI" addStyleNames="{style.alignMiddle}"/>
		</g:FlowPanel>
		</m:MaterialRow>
		<m:MaterialRow>
			<m:MaterialCheckBox ui:field="chkAxisWordsUI"
				value="true" text="# of words" paddingLeft="10"/>
			<m:MaterialCheckBox ui:field="chkAxisSentencesUI"
				value="true" text="# of sentences" paddingLeft="10"/>
			<m:MaterialCheckBox ui:field="chkAxisComplexityUI"
				value="true" text="complexity" paddingLeft="10"/>
			<m:MaterialCheckBox ui:field="chkAxisKeywordsUI"
				value="true" text="keywords" paddingLeft="10"/>

			<m:MaterialRow ui:field="pnlToggleContainerUI">
				<flair.pak:ConstructionSliderBundleEnglish
					ui:field="bdlEnglishSlidersUI" />
				<flair.pak:ConstructionSliderBundleGerman
					ui:field="bdlGermanSlidersUI" />
			</m:MaterialRow>
			
			<m:MaterialRow>
				<m:MaterialButton ui:field="btnApplyUI" margin="5"
					backgroundColor="BLUE" textColor="WHITE" iconType="FILTER_LIST"
					iconPosition="RIGHT" text="Filter" />
				<m:MaterialButton ui:field="btnResetUI" margin="5"
					backgroundColor="RED" textColor="WHITE" iconType="UNDO"
					iconPosition="RIGHT" text="Reset" />
			</m:MaterialRow>
		</m:MaterialRow>

	</ma.window:MaterialWindow>
</ui:UiBinder> 