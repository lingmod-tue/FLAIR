<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
	xmlns:flair="urn:import:com.flair.client.presentation.widgets">
	<ui:style>
	.bgGrey {
		width: 70%;
		background-color: #cecac1;
	}
	
	.bgGrey:active, .bgGrey:hover {
		background-color: #cecac1;
	}
	</ui:style>

	<m:MaterialContainer>
		<m:MaterialRow marginBottom="20">
			<m:MaterialCollapsible ui:field="wdgtTasks"
				accordion="false" grid="s12 m12 l12" margin="0" padding="0"
				visible="false" marginTop="20" marginBottom="20" />

			<m:MaterialRow marginTop="10">
				<m:MaterialButton ui:field="btnAddTask"
					width="100%" textAlign="CENTER" textColor="BLACK"
					addStyleNames="{style.bgGrey}" waves="DEFAULT" marginBottom="10"
					marginTop="10" />
				<m:MaterialButton ui:field="btnDeleteTasks"
					width="100%" textAlign="CENTER" textColor="BLACK"
					addStyleNames="{style.bgGrey}" waves="DEFAULT" />
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialCheckBox
							ui:field="chkDownloadResources" value="false" text="Download resources" />
			</m:MaterialRow>
			
			<m:MaterialRow textAlign="CENTER" marginTop="10">
				<m:MaterialColumn grid="l10 m10 s10"
					textAlign="CENTER">
					<m:MaterialButton ui:field="btnGenerateExercises"
						backgroundColor="ORANGE" textColor="WHITE" enabled="false" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="l2 m2 s2"
					textAlign="CENTER">
					<m:MaterialPreLoader size="SMALL" margin="0"
						ui:field="spnGenerating" visible="false">
						<m:MaterialSpinner color="BLUE_ONLY" />
					</m:MaterialPreLoader>
				</m:MaterialColumn>
			</m:MaterialRow>

		</m:MaterialRow>

		<!-- COPYRIGHT NOTICE -->
		<m:MaterialDialog ui:field="mdlCopyrightNoticeUI"
			type="DEFAULT" dismissible="true">
			<m:MaterialDialogContent>
				<m:MaterialTitle ui:field="titleCopyrightNoticeUI" 
					title="Please respect the copyright of the texts!" description="desc" />
				<m:MaterialCheckBox
					ui:field="chkDontShowCopyrightNoticeUI" text="Do not show this notification again." type="FILLED" />
			</m:MaterialDialogContent>
			<m:MaterialDialogFooter>
				<m:MaterialButton
					ui:field="btnCloseCopyrightNoticeUI" text="Ok" type="FLAT" />
			</m:MaterialDialogFooter>
		</m:MaterialDialog>
	</m:MaterialContainer>
</ui:UiBinder>