<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
	xmlns:flair="urn:import:com.flair.client.presentation.widgets">
	<ui:style>
	.bgGrey {
		width: 70%;
		background-color: #cecac1;
	}
	
	.bgGrey:active, .bgGrey:hover {
		background-color: #cecac1;
	}
	</ui:style>

	<m:MaterialContainer>
		<m:MaterialRow marginBottom="20">
			<m:MaterialCollapsible ui:field="wdgtTasks"
				accordion="false" grid="s12 m12 l12" margin="0" padding="0"
				visible="false" marginTop="20" marginBottom="20" />
			<m:MaterialRow margin="0" padding="0">
				<m:MaterialIcon ui:field="btnAddTask" iconType="ADD_CIRCLE_OUTLINE"
					textColor="GREEN" backgroundColor="WHITE" iconPosition="RIGHT"
					waves="DEFAULT" margin="0" padding="0" />
			</m:MaterialRow>
			<m:MaterialRow paddingTop="0" paddingBottom="0" marginBottom="0">
				<m:MaterialCheckBox 
					ui:field="chkDownloadResources" value="false"
					text="Download resources" />
			</m:MaterialRow>
			<m:MaterialRow paddingTop="0" paddingBottom="0" marginTop="0">
				<m:MaterialCheckBox
					ui:field="chkGenerateFeedback" value="true"
					text="Generate feedback" />
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialRow padding="0" margin="0">
					<m:MaterialLabel text="Output formats:"
						textColor="BLACK" />
				</m:MaterialRow>
				<m:MaterialCheckBox
					ui:field="chkH5p" value="true"
					text="H5P" />
				<m:MaterialCheckBox
					ui:field="chkFeedbookXml" value="true"
					text="FeedBook XML" />
			</m:MaterialRow>

			<m:MaterialRow textAlign="CENTER" marginTop="10">
				<m:MaterialColumn grid="l9 m9 s9"
					textAlign="CENTER">
					<m:MaterialButton ui:field="btnGenerateExercises"
						backgroundColor="ORANGE" textColor="WHITE" enabled="false" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="l3 m3 s3"
					textAlign="CENTER">
					<m:MaterialPreLoader size="SMALL" margin="0"
						ui:field="spnGenerating" visible="false">
						<m:MaterialSpinner color="BLUE_ONLY" />
					</m:MaterialPreLoader>
					<m:MaterialIcon ui:field="icoDownload" iconType="FILE_DOWNLOAD"
						textColor="BLUE" backgroundColor="WHITE" iconPosition="RIGHT"
						waves="DEFAULT" margin="0" padding="0" visible="false"/>
				</m:MaterialColumn>
			</m:MaterialRow>

		</m:MaterialRow>

		<!-- COPYRIGHT NOTICE -->
		<m:MaterialDialog ui:field="mdlCopyrightNoticeUI"
			type="DEFAULT" dismissible="true">
			<m:MaterialDialogContent>
				<m:MaterialTitle ui:field="titleCopyrightNoticeUI"
					title="Please respect the copyright of the texts!"
					description="desc" />
				<m:MaterialCheckBox
					ui:field="chkDontShowCopyrightNoticeUI"
					text="Do not show this notification again." type="FILLED" />
			</m:MaterialDialogContent>
			<m:MaterialDialogFooter>
				<m:MaterialButton
					ui:field="btnCloseCopyrightNoticeUI" text="Ok" type="FLAT" />
			</m:MaterialDialogFooter>
		</m:MaterialDialog>
	</m:MaterialContainer>
</ui:UiBinder>