<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
	xmlns:flair="urn:import:com.flair.client.presentation.widgets"
	xmlns:flair.pak="urn:import:com.flair.client.presentation.widgets.sliderbundles">
	
	<ui:style>
	.brand-logo {
		padding: 1px 1px 1px 1px;
	}
	
	.panel-navSearch {
		padding-top: 4px;
	}
	
	.global-animation {
		transition: 0.4s all;
		-webkit-transition: 0.4s all;
		-moz-transition: 0.4s all;
	}
	
	.panel-constSettings {
		border-right: 2px solid #e9e9e9;
	}
	</ui:style>
	
	<m:MaterialPanel backgroundColor="WHITE">	
		<m:MaterialHeader depth="996" layoutPosition="FIXED" width="100%">
			<!-- Main Navbar -->
			<m:MaterialNavBar ui:field="navMainUI" backgroundColor="ORANGE">
				<m:MaterialLink ui:field="tglSettingsPaneUI" iconType="MENU" waves="LIGHT"
					paddingLeft="7" />
				<m:MaterialNavBrand ui:field="btnAboutUI" marginLeft="5" href="javascript:void" text="FLAIR"/>
				
				<m:MaterialNavSection ui:field="pnlNavMainUI" addStyleNames="{style.global-animation}" float="RIGHT">
					<m:MaterialLink ui:field="btnWebSearchUI" iconType="SEARCH" textColor="WHITE" waves="LIGHT"/>
					<m:MaterialLink ui:field="btnUploadUI" iconType="FILE_UPLOAD" textColor="WHITE" waves="LIGHT"/>
					<m:MaterialLink ui:field="btnSwitchLangUI" activates="lang-selector" iconType="LANGUAGE" waves="LIGHT"/>
					<m:MaterialLink ui:field="tglDocPreviewPaneUI" iconType="RECEIPT" waves="LIGHT"/>
				</m:MaterialNavSection>
				
				<m:MaterialNavSection ui:field="pnlNavSearchUI" addStyleNames="{style.panel-navSearch} {style.global-animation}" float="RIGHT">
					<m:MaterialIcon iconType="SEARCH" hideOn="HIDE_ON_SMALL_DOWN"/>
					<m:MaterialTextBox ui:field="txtSearchBoxUI" width="300"/>
					
					<m:MaterialListBox ui:field="selResultLangUI" marginLeft="12" marginRight="12">
						<m.html:Option ui:field="selResultLangItmEnUI" text="English" value="ENGLISH" />
						<m.html:Option ui:field="selResultLangItmDeUI" text="German" value="GERMAN" />
					</m:MaterialListBox>
					
					<m:MaterialListBox ui:field="selResultCountUI" marginLeft="12" marginRight="12">
						<m.html:Option ui:field="selResultCountItm10UI" text="10 Results" value="10" />
						<m.html:Option ui:field="selResultCountItm20UI" text="20 Results" value="20" />
						<m.html:Option ui:field="selResultCountItm30UI" text="30 Results" value="30" />
						<m.html:Option ui:field="selResultCountItm40UI" text="40 Results" value="40" />
						<m.html:Option ui:field="selResultCountItm50UI" text="50 Results" value="50" />
					</m:MaterialListBox>
					
					<m:MaterialLink ui:field="btnCloseSearchUI" iconType="CLOSE" marginLeft="20"/>
				</m:MaterialNavSection>
			</m:MaterialNavBar>		
		</m:MaterialHeader>
						
		<!-- Language Dropdown -->
		<m:MaterialDropDown activator="lang-selector" constrainWidth="true">
			<m:MaterialLink ui:field="btnLangEnUI" waves="DEFAULT" text="English"/>
			<m:MaterialLink ui:field="btnLangDeUI" waves="DEFAULT" text="German"/>
		</m:MaterialDropDown>
		
		<!-- Settings Pane -->
		<m:MaterialRow ui:field="pnlConstructionsSettingsUI" overflow="AUTO" layoutPosition="FIXED" depth="995" backgroundColor="WHITE" 
			grid="l4 m4 s12" height="100%" padding="15" top="68" left="-400"
			addStyleNames="{style.panel-constSettings} {style.global-animation}">
			
			<m:MaterialRow textAlign="CENTER" paddingBottom="20">
				<!-- Result Count -->
				<m:MaterialLabel ui:field="lblDocCountUI" text="Result Count"
					marginBottom="20" marginTop="10"/>
				
				<!-- Visualize -->
				<m:MaterialButton ui:field="btnVisualizeUI" text="Visualize"
					textColor="WHITE" backgroundColor="ORANGE" size="LARGE"
					waves="DEFAULT" iconType="MULTILINE_CHART" iconPosition="RIGHT" iconColor="WHITE"/>
				<m.html:Br/><m.html:Br/>
				<!-- Export Settings -->
				<m:MaterialButton ui:field="btnExportSettingsUI" text="Share Search Setup"
					textColor="BLACK" backgroundColor="WHITE" size="LARGE" type="FLAT"
					waves="DEFAULT" iconType="SHARE" iconPosition="RIGHT" iconColor="BLUE"/>
			</m:MaterialRow>

			<!-- Text Characteristics -->
			<m:MaterialRow paddingBottom="5">	
				<m:MaterialCard padding="20">
					<m:MaterialCardTitle ui:field="lblTextCharacteristicsUI" text="Text Characteristics"
						iconType="SUBJECT" iconPosition="RIGHT"/>
						
					<!-- Length -->
					<m:MaterialRow>					
						<m:MaterialLabel ui:field="lblTextLengthUI" text="Length:"/>
						<flair:DocumentLengthSlider ui:field="sldDocLengthUI"/>
					</m:MaterialRow>
	
					<!-- Level -->
					<m:MaterialRow>
						<m:MaterialLabel ui:field="lblTextLevelUI" text="Levels:"
							marginBottom="5"/>
						
						<m:MaterialRow>
							<m:MaterialColumn>
								<m:MaterialCheckBox ui:field="chkTextLevelAUI" value="true" text="A1-A2"/>
								<m:MaterialBadge ui:field="bdgTextLevelACountUI" text="50/50"/>
								
								<m:MaterialCheckBox ui:field="chkTextLevelBUI" value="true" text="B1-B2"/>
								<m:MaterialBadge ui:field="bdgTextLevelBCountUI" text="50/50"/>
								
								<m:MaterialCheckBox ui:field="chkTextLevelCUI" value="true" text="C1-C2"/>
								<m:MaterialBadge ui:field="bdgTextLevelCCountUI" text="50/50"/>
							</m:MaterialColumn>
							
						</m:MaterialRow>
					</m:MaterialRow>
				</m:MaterialCard>				
			</m:MaterialRow>	
			
			<m:MaterialRow paddingBottom="10" textAlign="CENTER">
				<m:MaterialCard padding="20" marginBottom="20">
					<!-- Keywords/Vocab -->
					<flair:KeywordWeightSlider ui:field="sldKeywordsUI" />
				</m:MaterialCard>		
			</m:MaterialRow>	
				
			<m:MaterialRow depth="990" paddingBottom="20">
				<m:MaterialRow textAlign="CENTER">
					<m:MaterialButton ui:field="btnConstructionsListUI" text="List Of Constructions"
						type="FLAT" waves="DEFAULT" backgroundColor="WHITE" textColor="BLUE"/>
				</m:MaterialRow>
				
				<!-- Weight Sliders -->
				<flair.pak:ConstructionSliderBundleEnglish/>
				
				<m:MaterialRow paddingTop="20" textAlign="CENTER">
					<m:MaterialButton ui:field="btnResetAllUI" text="Reset All"
						waves="LIGHT" backgroundColor="RED" textColor="WHITE" iconType="UNDO" iconPosition="RIGHT"/>
				</m:MaterialRow>	
			</m:MaterialRow>					
		</m:MaterialRow>
		
		<!-- Results Pane-->
		<m:MaterialContainer paddingTop="68" depth="700">
            <m:MaterialRow layoutPosition="RELATIVE" grid="l12 m12 s12">
                <m:MaterialPanel ui:field="pnlResultsListUI" backgroundColor="WHITE" layoutPosition="RELATIVE" grid="l12 m12 s12"
                 	marginBottom="0" padding="5" addStyleNames="{style.global-animation}">
                 	
                    <m:MaterialRow ui:field="mainHeader" marginBottom="0" paddingLeft="40" addStyleNames="{style.global-animation}">
                        <m:MaterialLink text="Name" grid="l5 m5 s6" textColor="GREY_DARKEN_1"/>
                        <m:MaterialLink text="Shared by" grid="l4 m4 s6" textColor="GREY_DARKEN_1"/>
                        <m:MaterialLink hideOn="HIDE_ON_SMALL_DOWN" text="Share date" grid="l3 m3" textColor="GREY_DARKEN_1"/>
                    </m:MaterialRow>
                    <m:MaterialCollapsible marginTop="20" padding="0"/>
                </m:MaterialPanel>
            </m:MaterialRow>
        </m:MaterialContainer>	
		
		<!-- Preview Pane -->
		<flair:DocumentPreviewPane ui:field="pnlDocPreviewUI"/>

	    <!-- About Modals -->
		<m:MaterialModal ui:field="mdlAboutEnUI" dismissible="true">
			<m:MaterialModalContent>
				<g:HTML>
					<center>
						<h3 class="modal-title">
							<img class="{style.brand-logo} modal-title" src="img/logo_2.png" alt="About FLAIR"/>
						</h3>
						<p>
							<span style="color:darkorange">
								<b>by</b>
							</span>
							<a href="http://sfs.uni-tuebingen.de/~mchnkina/" target="_blank">Maria
								Chinkina</a>
							<a href="mailto:maria.chinkina@uni-tuebingen.de?Subject=FLAIR%20tool"
								target="_top" title="write to Maria Chinkina">
								<span class="glyphicon glyphicon-envelope"></span>
							</a>
							&amp;
							<a href="http://sfs.uni-tuebingen.de/~mkannan/" target="_blank">Madeeswaran
								Kannan</a>
							<a href="mailto:mkannan@sfs.uni-tuebingen.de?Subject=FLAIR%20tool"
								target="_top" title="write to Madeeswaran Kannan">
								<span class="glyphicon glyphicon-envelope"></span>
							</a>
							supervised by
							<a href="http://sfs.uni-tuebingen.de/~dm/" target="_blank">Prof. Dr.
								Detmar Meurers</a>
							<br/>
								<span style="color:darkorange">@</span>
								University of Tübingen, Germany
								<span style="color:darkorange">|</span>
								2015-2017
								<br/> Version 2.0
						</p>
					</center>
					
					<div style="text-align: center">
						<p>FLAIR is an online tool for language teachers and learners that:
						</p>
						<ul style="text-align: left">
							<li>searches the web for a topic of interest </li>
							<li>analyzes the results for grammatical constructions and
								readability levels </li>
							<li>re-ranks the results according to your (pedagogical or
								learning) needs specified in the settings</li>
						</ul>	
					</div>
		
					<p>
						<b>PAPERS:</b>
					</p>
					<ul>
						<li>
							<a
								href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/Chinkina_Maria_thesis_2015.pdf"
								target="_blank">MA thesis by Maria Chinkina</a>
						</li>
						<li>
							<a
								href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/Chinkina_Meurers_BEA_2016.pdf"
								target="_blank">BEA paper</a>
							(Maria Chinkina, Detmar Meurers)
						</li>
						<li>
							<a
								href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/Chinkina_Kannan_Meurers_ACL_2016.pdf"
								target="_blank">System description paper</a>
							(Maria Chinkina, Madeeswaran Kannan, Detmar Meurers)
						</li>
					</ul>
					<br/>
						<p>
							<b>ADDITIONAL MATERIAL:</b>
						</p>
						<ul>
							<li>
								<a
									href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/FLAIR_Evaluation.pdf"
									target="_blank">Evaluation of the FLAIR algorithm</a>
								(81 grammatical constructions: Precision, Recall, F1)
							</li>
							<li>
								<a href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/AWL.pdf"
									target="_blank">AWL: Academic Word List</a>
								(
								<a href="http://onlinelibrary.wiley.com/doi/10.2307/3587951/abstract"
									target="_blank">Coxhead, 2000</a>
								)
							</li>
							<li>
								<a
									href="http://sfs.uni-tuebingen.de/~mchnkina/img/heatmap_vert_color.png"
									target="_blank">Distribution of grammatical constructions in the Web</a>
								(top 55 hits for a query)
							</li>
						</ul>
						<br/>
							<p>
								<b>Third-party tools:</b>
							</p>
							<ul>
								<li>
									Back-end:
									<a href="http://datamarket.azure.com/dataset/bing/search"
										target="_blank">Microsoft Bing API</a>
									(
									<a href="https://github.com/peculater/azure-bing-search-java"
										target="_blank">Java implementation</a>
									),
									<a href="https://github.com/kohlschutter/boilerpipe" target="_blank">Boilerpipe</a>
									,
									<a href="http://stanfordnlp.github.io/CoreNLP/" target="_blank">Stanford
										CoreNLP</a>
								</li>
								<li>
									Front-end:
									<a href="http://getbootstrap.com" target="_blank">Bootstrap</a>
									,
									<a href="http://glyphicons.com/" target="_blank">Glyphicons</a>
									,
									<a href="https://d3js.org" target="_blank">d3</a>
								</li>
							</ul>
							<br/>
								<p>
									<b>LICENSE:</b>
								</p>
								<a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/">
									<img alt="Creative Commons License" style="border-width:0"
										src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" />
								</a>
								<br />
								FLAIR tool is licensed under a
								<a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/">Creative Commons
									Attribution-NonCommercial-ShareAlike 4.0 International License</a>.
				</g:HTML>				
			</m:MaterialModalContent>
			
			<m:MaterialModalFooter>
				<m:MaterialButton ui:field="btnAboutEnCloseUI" text="Close" type="FLAT"/>
			</m:MaterialModalFooter>
		</m:MaterialModal>
			
		<m:MaterialModal ui:field="mdlAboutDeUI" dismissible="true">
			<m:MaterialModalContent>
				<g:HTML>
					<center>
					    <h3 class="modal-title">
					    	<img class="{style.brand-logo} modal-title" src="img/logo_2.png" alt="Über FLAIR"/>
					    </h3>
					    <p><span style="color:darkorange"><b>von</b></span> <a href="http://sfs.uni-tuebingen.de/~mchnkina/" target="_blank">Maria Chinkina</a> <a href="mailto:maria.chinkina@uni-tuebingen.de?Subject=FLAIR%20tool" target="_top" title="Maria Chinkina kontaktieren"><span class="glyphicon glyphicon-envelope"></span></a> 
					        &amp;
					        <a href="http://sfs.uni-tuebingen.de/~mkannan/" target="_blank">Madeeswaran Kannan</a> <a href="mailto:mkannan@sfs.uni-tuebingen.de?Subject=FLAIR%20tool" target="_top" title="Madeeswaran Kannan kontaktieren"><span class="glyphicon glyphicon-envelope"></span></a> betreut von 
					        <a href="http://sfs.uni-tuebingen.de/~dm/" target="_blank">Prof. Dr. Detmar Meurers</a> 
					        <br/> <span style="color:darkorange">@</span> Universität Tübingen, Deutschland <span style="color:darkorange">|</span> 2015-2017
					        <br/> Version 2.0
					    </p>
					</center>
				
					<div style="text-align: center">
                            <p>FLAIR ist ein Online-Tool für Lerner und Lehrer von Sprachen. FLAIR:
                            </p>
                            <ul   style="text-align: left">
                                <li>durchsucht das Web nach einem gewünschten Thema</li>
                                <li>analysiert die Suchergebnisse auf Grammatikkonstruktionen und Schwierigkeitsgrade</li>
                                <li>bewertet die Ergebnisse nach Ihren (pädagogischen oder lern-spezifischen) Bedürfnissen, die Sie in den Einstellungen festlegt haben</li>
                            </ul>
                        </div>

                        <p><b>ARTIKEL:</b></p>
                        <ul>
                            <li><a href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/Chinkina_Maria_thesis_2015.pdf" target="_blank">MA-Arbeit von Maria Chinkina</a></li>
                            <li><a href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/Chinkina_Meurers_BEA_2016.pdf" target="_blank">BEA-Artikel</a> (Maria Chinkina, Detmar Meurers)</li>
                            <li><a href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/Chinkina_Kannan_Meurers_ACL_2016.pdf" target="_blank">Systembeschreibung</a> (Maria Chinkina, Madeeswaran Kannan, Detmar Meurers)</li>
                        </ul>
                        <br/>
                        <p><b>ZUSÄTZLICHES MATERIAL:</b></p>
                        <ul>
                            <li><a href="http://sfs.uni-tuebingen.de/~mchnkina/downloads/FLAIR_Evaluation.pdf" target="_blank">Evaluation des FLAIR-Algorithmus</a> (81 grammatische Konstruktionen für Englisch: Precision, Recall, F1)</li>
                      </ul>
                        <br/>
                        <p><b>DRITT-WERKZEUGE</b></p>
                        <ul>
                            <li>Back-end: <a href="http://datamarket.azure.com/dataset/bing/search" target="_blank">Microsoft Bing API</a> (<a href="https://github.com/peculater/azure-bing-search-java" target="_blank">Java implementation</a>), <a href="https://github.com/kohlschutter/boilerpipe" target="_blank">Boilerpipe</a>, <a href="http://stanfordnlp.github.io/CoreNLP/" target="_blank">Stanford CoreNLP</a></li>
                            <li>Front-end: <a href="http://getbootstrap.com" target="_blank">Bootstrap</a>, <a href="http://glyphicons.com/" target="_blank">Glyphicons</a>, <a href="https://d3js.org" target="_blank">d3</a></li>
                        </ul>
                        <br/>
                        <p><b>LIZENZ</b> </p>
                        <a rel="license" href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.de"><img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png" /></a><br/>FLAIR ist lizensiert unter einer <a rel="license" href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.de">Creative Commons Namensnennung - Nicht-kommerziell - Weitergabe unter gleichen Bedingungen 4.0 Internationalen Lizenz</a>.
				</g:HTML>				
			</m:MaterialModalContent>
			
			<m:MaterialModalFooter>
				<m:MaterialButton ui:field="btnAboutDeCloseUI" text="Schliessen" type="FLAT"/>
			</m:MaterialModalFooter>
		</m:MaterialModal>
	</m:MaterialPanel>
	  
</ui:UiBinder> 